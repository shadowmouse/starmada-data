{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/shadowmouse/starmada-data/main/ship-spec.json",
  "title": "Starmada (2024) Ship Spec Document",
  "description": "Ship Spec Definition for Starmada (2024) Ship Definition JSON Files",
  "type": "object",
  "properties": {
    "faction": {
      "type": "string"
    },
    "class": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "size": {
      "type": "number",
      "exclusiveMinimum": 1
    },
    "engines": {
      "type": "integer",
      "exclusiveMinimum": 0
    },
    "tech_levels": {
      "type": "array",
      "items": {
        "type": "integer"
      }
    },
    "batteries": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "banks": {
            "type": "object",
            "properties": {
              "<battery_string>": {
                "type": "integer"
              }
            }
          },
          "loss_limit": {
            "type": "integer",
            "exclusiveMinimum": 1
          },
          "config": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "traits": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "bands": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "range": {
                      "type": "integer"
                    },
                    "rate-of-fire": {
                      "type": "integer"
                    },
                    "accuracy": {
                      "type": "integer"
                    },
                    "damage": {
                      "type": "integer"
                    }
                  },
                  "required": ["range", "rate_of_fire", "accuracy", "damage"]
                }
              },
              "munition_count": {
                "type": "integer"
              },
              "required": ["munition_count", "bands", "traits", "name"]
            }
          },
          "required": ["loss_limit", "banks"]
        }
      }
    },
    "required": ["faction", "class", "type", "size", "engines", "tech_levels"]
  },
  "systems": {
    "type": "object",
    "properties": {
      "<system_id_key>": {
        "type": "integer"
      }
    }
  },
  "required": ["class", "type", "size", "engines"]
}
